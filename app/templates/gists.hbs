<h2>Gists list</h2>

<div class="row">
    <div class="col-md-8">
        <div class="row">
            {{#each gist in controller}}
                <div class="col-md-6">
                    <div class="box box-solid box-default collapsed-box">
                        <div class="box-header">
                            <h5 class="box-title">
                                <i class="fa fa-server"></i>
                                {{ gist.id }}
                            </h5>
                            <div class="box-tools pull-right">
                                <button class="btn btn-default btn-sm" data-widget="collapse"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                        <div class="box-body" style="display: none">
                            <p class="lead">{{ gist.description }}</p>
                            <dl class="dl-horizontal">
                                <dt>ID</dt> <dd>{{ gist.id }}</dd>
                                <dt>Public</dt> <dd>{{ gist.public }}</dd>
                                <dt>Created At</dt> <dd>{{ gist.createdAt }}</dd>
                                <dt>Updated At</dt> <dd>{{ gist.udpatedAt }}</dd>
                                <dt>Comments</dt> <dd>{{ gist.comments }}</dd>
                                <dt>Link</dt> <dd><a {{ bind-attr href=gist.htmlUrl }}>{{ gist.htmlUrl }}</a></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="col-md-4">
        {{outlet}}
    </div>
</div>
